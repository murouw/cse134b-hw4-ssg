---
// src/pages/blog/[slug].astro
import { getMarkdownContent } from '../../utils/markdownParser';
import BaseLayout from '../../layouts/BaseLayout.astro';

const { slug } = Astro.params;
const post = await getMarkdownContent(slug); // A function to load and parse the specific post
---

<BaseLayout title={post.title}>
  <article>
    <h1>{post.title}</h1>
    <p>{post.date}</p>
    <div>{post.content}</div> <!-- Render the full content of the post here -->
  </article>
</BaseLayout>
